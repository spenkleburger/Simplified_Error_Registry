# Always use LF line endings
* text=auto eol=lf

# Explicitly mark binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.db binary
*.sqlite binary

# Ensure text files use LF
*.py text eol=lf
*.sh text eol=lf
*.bash text eol=lf

# Exclude from exports (optional)
.gitattributes export-ignore
.gitignore export-ignore